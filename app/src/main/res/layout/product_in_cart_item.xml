<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_customer_height"
    android:padding="@dimen/layout_customer_checkout_padding">
    <ImageView
        android:layout_width="@dimen/layout_customer_checkout_height"
        android:layout_height="@dimen/layout_customer_checkout_height"
        android:id="@+id/img_item_product_cart"
        android:src="@drawable/glass"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tv_number_product_in_cart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="0"
        android:layout_toRightOf="@id/img_item_product_cart"
        android:gravity="top"
        android:textColor="@android:color/holo_red_light"/>
    <TextView
    android:id="@+id/tv_name_product_in_cart"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/tv_img_product_in_cart_margin_left"
    android:text="sun glass"
    android:layout_toRightOf="@id/img_item_product_cart"
    android:gravity="center"/>
    <TextView
        android:id="@+id/tv_price_product_in_cart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/tv_img_product_in_cart_margin_left"
        android:text="sun glass"
        android:layout_toRightOf="@id/tv_name_product_in_cart"
        android:layout_alignParentRight="true"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/img_delete_product_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_product"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>