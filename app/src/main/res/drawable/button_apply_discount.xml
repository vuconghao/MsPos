<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >   <!-- Trạng thái khi nút click -->
        <shape>
            <solid
                android:color="#eab668" />
            <corners
                android:radius="3dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>

            <solid
                android:color="#ef1e29" />            <!-- Thiết lập màu nền cho nút -->

            <corners
                android:radius="3dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>