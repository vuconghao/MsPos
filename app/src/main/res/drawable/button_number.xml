<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorPrimary" />
            <stroke
                android:width="1dp"
                android:color="#fdc13e" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#f9faf6" />            <!-- Thiết lập màu nền cho nút -->
            <stroke
                android:width="1dp"
                android:color="#fdfdf9" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>